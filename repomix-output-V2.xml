class RegionalFallbackHandler:
    def __init__(self):
        self.regional_endpoints = {
            'primary': 'https://api.sarvam.ai',
            'mumbai': 'https://mumbai.api.sarvam.ai',
            'bangalore': 'https://bangalore.api.sarvam.ai',
